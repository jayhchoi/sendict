type User {
  id: ID! @unique
  email: String! @unique
  username: String! @unique
  avatar: String!
  password: String!
  name: String!
  #
  sentences: [Sentence!]! @relation(name: "SentencesToUser" onDelete: CASCADE)
  likes: [Like!]! @relation(name: "LikestoUser" onDelete: CASCADE)
  #
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Sentence {
  id: ID! @unique
  english: String!
  korean: String!
  source: String
  label: String
  #
  user: User! @relation(name: "SentencesToUser")
  likes: [Like!]! @relation(name: "LikestoSentence" onDelete: CASCADE)
  #
  createdAt: DateTime!
  updatedAt: DateTime!
}

